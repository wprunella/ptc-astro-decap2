---
import { getCollection } from 'astro:content';

const services = await getCollection('services');
const locations = await getCollection('locations');

const majorServices = services.slice(0, 6);
const majorLocations = locations.filter(loc => loc.data.type === 'major_city').slice(0, 6);
---

<footer class="bg-gray-900 text-white">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="lg:col-span-2">
        <h3 class="text-2xl font-bold text-primary-400 mb-4">Personal Trainer City</h3>
        <p class="text-gray-300 mb-6 max-w-md">
          Connecting you with certified personal trainers and nutrition coaches across major cities. 
          Achieve your fitness goals with expert guidance and personalized training programs.
        </p>
        <div class="flex space-x-4">
          <a href="#" class="text-gray-400 hover:text-primary-400 transition-colors" aria-label="Facebook">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-primary-400 transition-colors" aria-label="Instagram">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987s11.987-5.367 11.987-11.987C24.014 5.367 18.647.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.703-2.448-2.238 0-1.536 1.151-2.239 2.448-2.239 1.297 0 2.449.703 2.449 2.239 0 1.535-1.152 2.238-2.449 2.238zm7.718 0c-1.297 0-2.448-.703-2.448-2.238 0-1.536 1.151-2.239 2.448-2.239 1.297 0 2.449.703 2.449 2.239 0 1.535-1.152 2.238-2.449 2.238z"/>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-primary-400 transition-colors" aria-label="Twitter">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Services</h4>
        <ul class="space-y-2">
          {majorServices.map((service) => (
            <li>
              <a 
                href={`/${service.slug}`}
                class="text-gray-300 hover:text-primary-400 transition-colors"
              >
                {service.data.name}
              </a>
            </li>
          ))}
          <li>
            <a href="/services" class="text-primary-400 font-semibold hover:text-primary-300 transition-colors">
              View All Services →
            </a>
          </li>
        </ul>
      </div>

      <!-- Locations -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Locations</h4>
        <ul class="space-y-2">
          {majorLocations.map((location) => (
            <li>
              <a 
                href={`/${location.slug}`}
                class="text-gray-300 hover:text-primary-400 transition-colors"
              >
                {location.data.city}, {location.data.state}
              </a>
            </li>
          ))}
          <li>
            <a href="/locations" class="text-primary-400 font-semibold hover:text-primary-300 transition-colors">
              View All Locations →
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-700 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="text-gray-400 text-sm mb-4 md:mb-0">
          © 2024 Personal Trainer City. All rights reserved.
        </div>
        <div class="flex space-x-6 text-sm">
          <a href="/privacy" class="text-gray-400 hover:text-white transition-colors">Privacy Policy</a>
          <a href="/terms" class="text-gray-400 hover:text-white transition-colors">Terms of Service</a>
          <a href="/contact" class="text-gray-400 hover:text-white transition-colors">Contact</a>
        </div>
      </div>
    </div>
  </div>
</footer>
