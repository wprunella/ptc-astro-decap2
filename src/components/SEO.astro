---
interface Props {
  title?: string;
  description?: string;
  canonical?: string;
}

const { title, description, canonical } = Astro.props;
const siteTitle = "Personal Trainer City | Find Your Perfect Fitness Coach";
const siteDescription = "Connect with certified personal trainers in your area. Custom workout plans, nutrition coaching, and fitness programs for all levels.";
---

<title>{title || siteTitle}</title>
<meta name="description" content={description || siteDescription} />
<link rel="canonical" href={canonical || Astro.url.href} />

<!-- Open Graph -->
<meta property="og:title" content={title || siteTitle} />
<meta property="og:description" content={description || siteDescription} />
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url.href} />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title || siteTitle} />
<meta name="twitter:description" content={description || siteDescription} />
