---
import LeadForm from './LeadForm.jsx';

interface Props {
    // This prop holds the current page's unique slug (e.g., 'washington-dc/strength-training')
    pageSlug: string;
}

const { pageSlug } = Astro.props;
---

<section class="lead-form-cta py-12 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-8">
        <h2 class="text-5xl md:text-5xl font-extrabold text-blue-900">
            Start Your Transformation
        </h2>
        <p class="text-xl text-blue-900 mt-4">
            Connect with certified trainers in your area.
        </p>
    </div>

    <LeadForm pageSlug={pageSlug} client:visible />
  </div>
</section>
