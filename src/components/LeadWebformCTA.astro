---
import LeadForm from './LeadForm.jsx';

interface Props {
    // This prop holds the current page's unique slug (e.g., 'washington-dc/strength-training')
    pageSlug: string;
}

const { pageSlug } = Astro.props;
---

<section class="lead-form-cta my-12 py-10 bg-primary-50 rounded-xl shadow-inner">
  <div class="container mx-auto px-4">
    <div class="text-center mb-8">
        <h2 class="text-3xl md:text-4xl font-extrabold text-primary-800">
            Start Your Fitness Journey Today
        </h2>
        <p class="text-xl text-gray-600 mt-2">
            Fill out the form below to connect instantly with certified trainers in your area.
        </p>
    </div>

    <LeadForm pageSlug={pageSlug} client:visible />
  </div>
</section>
