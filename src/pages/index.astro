---
import Layout from '../layouts/Layout.astro';
import HeaderNav from '../components/HeaderNav.astro';
import SEO from '../components/SEO.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';
// CRITICAL COMPONENT: Import Lead Webform
import LeadWebformCTA from '../components/LeadWebformCTA.astro';
// Assuming a FeaturedImage component exists and takes src/alt/className
import FeaturedImage from '../components/FeaturedImage.astro'; 
import { Image } from 'astro:assets';

const services = await getCollection('services');
const locations = await getCollection('locations');

// Logic for Pillar Links: ONLY Major Cities and ONLY Major Services
const majorCities = locations.filter(loc => loc.data.type === 'major_city');
const majorServices = services.slice(0, 6);
---

<Layout title="Personal Trainer City | Find Your Perfect Fitness Coach">
  <HeaderNav />
  <SEO 
    title="Personal Trainer City | Find Certified Fitness Coaches Near You"
    description="Connect with certified personal trainers in your city. Custom workout plans, nutrition coaching, and fitness programs for all levels."
  />

  <main class="min-h-screen">
    <section class="bg-gradient-to-tl from-gray-800 to-gray-900 text-white py-24 md:py-32">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-6xl font-extrabold mb-6 tracking-tight">Find Your Perfect Personal Trainer</h1>
        <p class="text-lg md:text-xl mb-10 max-w-4xl mx-auto opacity-90">
          Connect with certified fitness professionals in your city. Transform your body and lifestyle with personalized coaching tailored to your goals.
        </p>
        <a href="#services" class="bg-white text-primary-700 px-10 py-4 rounded-full font-bold text-lg shadow-lg hover:bg-gray-200 transition-all duration-300 inline-block uppercase tracking-wide">
          Explore Programs
        </a>
      </div>
    </section>

    <section id="services" class="py-20 bg-gray-50">
      <div class="container mx-auto px-6">
        <h2 class="text-3xl md:text-4xl font-bold text-center text-blue-900 mb-14">Our Specialized Services</h2>
        <div class="flex align-center justify-center gap-8 px-10">
          {majorServices.map((service) => (
            <a 
              href={`/${service.slug}`} 
              class="basis-1/3 group bg-white shadow-lg rounded-xl overflow-hidden hover:shadow-2xl hover:scale-[1.02] transition-all duration-300 border border-gray-100 block"
            >
            
              {/* IMAGE WRAPPER with FALLBACK */}
              <div class="bg-center bg-gray-200 overflow-hidden">
                <img
                  src={service.data.hero_image} 
                  alt={service.data.name}
                  class="object-cover h-80 transition-transform duration-500 group-hover:scale-105"
                />
              </div>
              
              
              <div class="p-6 md:p-8">
                <h3 class="text-2xl font-bold text-gray-700 hover:text-blue-700 mb-3">{service.data.name}</h3>
                <p class="text-gray-600 mb-6">{service.data.tagline}</p>
                <span class="text-primary-600 font-semibold group-hover:text-primary-700 transition-colors">
                  Find {service.data.name} Coaches 
                </span>
              </div>
            </a>
          ))}
        </div>
        <div class="text-center mt-12">

          <!--
          <a href="/services-list" class="bg-white text-primary-700 px-10 py-4 rounded-full font-bold text-lg shadow-lg hover:bg-gray-200 transition-all duration-300 inline-block uppercase tracking-wide">
            View All Services
          </a>
          -->

        </div>
      </div>
    </section>

    <section class="bg-gray-100 py-20">
      <div class="container mx-auto px-6">
        <h2 class="text-3xl md:text-4xl font-bold text-center text-blue-900 mb-14">Find Trainers in Your City</h2>
        <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
          {majorCities.map((location) => (
            <a 
              href={`/${location.slug}`}
              class="bg-white rounded-xl shadow-lg p-4 text-center hover:shadow-2xl hover:bg-gray-50 transition-all duration-300 border border-gray-200"
            >
              <h3 class="text-xl font-bold text-primary-800 mb-1">{location.data.city}</h3>
              <p class="text-sm text-gray-500">{location.data.state}</p>
            </a>
          ))}
        </div>
        <div class="text-center mt-12">
          <a href="/locations" class="bg-gray-500 text-white px-10 py-4 rounded-full font-bold text-lg shadow-lg hover:bg-gray-800 transition-all duration-300 inline-block uppercase">
            View All Locations
          </a>
        </div>
      </div>
    </section>

    <section>
    <div><LeadWebformCTA pageSlug="homepage" /></div>
    </section>
    
  </main>
  
  <Footer />
</Layout>
