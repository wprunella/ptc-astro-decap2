---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import HeaderNav from '../components/HeaderNav.astro';
import SEO from '../components/SEO.astro';
import LeadWebformCTA from '../components/LeadWebformCTA.astro';
import Footer from '../components/Footer.astro';

const allServices = await getCollection('services');
---

<Layout title="Personal Training Fitness Programs">
  <HeaderNav />
  <SEO 
    title="Our Complete List of Personal Training Services"
    description="Browse our complete range of certified personal training programs including strength, flexibility, rehabilitation, and sports conditioning."
    canonical="/services/"
  />

  <main class="w-full bg-gray-50">
  <section class="bg-gray-900 text-white text-center py-24 md:py-32">
    <div class="container mx-auto px-4 text-center">   
     <h1 class="text-4xl md:text-5xl font-bold mb-8">Personal Training Programs</h1>
     <a href="#leadform" class="bg-blue-600 text-white px-10 py-4 rounded-full font-bold text-lg shadow-lg hover:bg-gray-400 transition-all duration-300 inline-block uppercase tracking-wide">
          Find My Trainer
        </a>
      </div>
    </section>

    <div class="container mx-auto px-4 py-12">
      <div class="flex flex-wrap align-center justify-center gap-8">
        {allServices.map((service) => (
          <a 
            href={`/${service.slug}`} 
            class="max-w-96 group bg-white shadow-lg rounded-xl overflow-hidden hover:shadow-2xl hover:scale-[1.02] transition-all duration-300 border border-gray-100 block"
          >
           {/* IMAGE WRAPPER with FALLBACK */}
              <div class="bg-center bg-gray-200 overflow-hidden">
                <img
                  src={service.data.hero_image} 
                  alt={service.data.name}
                  class="object-cover h-64 w-full transition-transform duration-500 group-hover:scale-105"
                />
              </div>

            <div class="p-6">
                <h2 class="text-2xl font-bold text-gray-700 hover:text-blue-700 mb-3">{service.data.name}</h2>
                <p class="text-gray-600 mb-6">{service.data.tagline}</p>
                <span class="text-primary-600 font-semibold group-hover:text-primary-700 transition-colors">
                  Program Details 
                </span>
              </div>
          </a>
        ))}
      </div>
    </div>

<section id="leadform">
    <div><LeadWebformCTA pageSlug="programs" /></div>
    </section>

  </main>
  
  <Footer />
</Layout>

