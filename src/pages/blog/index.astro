---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import HeaderNav from '../../components/HeaderNav.astro';
import SEO from '../../components/SEO.astro';
import Footer from '../../components/Footer.astro';

const blogPosts = await getCollection('blog');
const sortedPosts = blogPosts.sort((a, b) => new Date(b.data.publish_date).getTime() - new Date(a.data.publish_date).getTime());
---

<Layout title="Fitness Blog | Personal Trainer City">
  <HeaderNav />
  <SEO 
    title="Fitness Blog | Expert Tips & Training Advice"
    description="Read the latest fitness tips, training advice, and health insights from certified personal trainers at Personal Trainer City."
    canonical="/blog/"
  />

  <main class="min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 py-8">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold text-center mb-12">Fitness Blog</h1>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post) => (
            <article class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow">
              <div class="h-48 bg-gradient-to-br from-primary-500 to-primary-600 flex items-center justify-center">
                <h3 class="text-xl font-bold text-white text-center px-4">{post.data.title}</h3>
              </div>
              <div class="p-6">
                <p class="text-gray-600 text-sm mb-2">By {post.data.author} • {new Date(post.data.publish_date).toLocaleDateString()}</p>
                <a 
                  href={`/blog/${post.slug}`}
                  class="text-primary-600 font-semibold hover:text-primary-700 transition-colors"
                >
                  Read More →
                </a>
              </div>
            </article>
          ))}
        </div>
        
        {/* Fallback for when no posts exist yet */}
        {sortedPosts.length === 0 && (
          <p class="text-center text-gray-500 mt-10">No blog posts found. Add content to the `blog` collection!</p>
        )}
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>

